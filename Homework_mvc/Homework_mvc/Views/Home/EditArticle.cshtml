@using Homework_mvc.Model;

@model ArticleViewModel

@{
    ViewBag.Title = "EditArticle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center m-4">Редактирование статьи</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-group">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label " })

        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label " })

        @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control", @rows = 15 } })
        @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })

    </div>
    <label for="tags">Теги</label>
    <input type="text" class="form-control" name="TagsQuery" id="tags" value="@Model.TagsQuery" />
    
      
        <p>
            <div class="form-group">
                @Html.ActionLink("Back to List", "Index", "Home", new { @class = "btn btn-primary float-left" })
                <div class="float-right">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </p>
    }


