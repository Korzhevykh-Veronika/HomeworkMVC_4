@using Homework_mvc.Entities
@model Article
@{
    ViewBag.Title = "GetArticle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="card">
        <div class="card-body">
            <h2 class="card-title text-center">@Model.Title</h2>
            <img src="@Model.Images" class="card-img-top">
            <div class="display-label"><b>Теги: </b></div>
            <ul>
                @foreach (Tag t in Model.Tags)
                {
                    <li>@t.Text</li>
                }
            </ul>
            <p class="card-text text-center m-3">@Model.Text</p>
        </div>
        <div class="card-footer text-muted">
            <p class="card-text float-left">Автор публикации: @Model.Author</p>
            <p class="card-text float-right">Дата публикации: @Model.Date.ToShortDateString()</p>
        </div>
        
    </div>
    <p>
        @Html.ActionLink("Back to List", "Index", "Home", new { @class = "btn btn-primary section" })
        @Html.ActionLink("Редактировать", "EditArticle", "Home", new { id = Model.Id }, new { @class = "btn btn-primary section" })
        @Html.ActionLink("Удалить статью", "DeleteArticle", "Home", new { id = Model.Id }, new { @class = "btn btn-primary section" })

    </p>



